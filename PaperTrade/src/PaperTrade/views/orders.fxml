<?import javafx.scene.text.Text?>


<VBox prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PaperTrade.controllers.OrdersController">
   <children>
      <HBox fx:id="navbar" alignment="CENTER_LEFT" prefHeight="75.0" prefWidth="200.0" spacing="25.0" stylesheets="@../../resources/css/style.css">
         <children>
            <Label id="main_label" fx:id="home_button" style="-fx-cursor: hand;" text="Paper Trade" textAlignment="CENTER" textFill="#84a3bc">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Label fx:id="investments_button" alignment="CENTER" prefHeight="34.0" prefWidth="86.0" styleClass="clickable_label" stylesheets="@../../resources/css/style.css" text="Investments" />
            <Pane maxHeight="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
            <TextField fx:id="search_textfield" />
            <Button fx:id="search_button" mnemonicParsing="false" text="Search" />
            <MenuButton fx:id="profile_dropdown" mnemonicParsing="false" prefHeight="26.0" prefWidth="77.0" text="Profile">
               <items>
                  <MenuItem fx:id="profile_button" mnemonicParsing="false" text="My Profile" />
                  <MenuItem fx:id="orders_button" mnemonicParsing="false" text="Orders" />
                  <MenuItem mnemonicParsing="false" text="Watchlist" />
                  <MenuItem fx:id="orders_button1" mnemonicParsing="false" text="Tutorial" />
                  <MenuItem fx:id="orders_button2" mnemonicParsing="false" text="Logout" />
               </items>
            </MenuButton>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0" VBox.vgrow="ALWAYS">
         <children>
            <Text fx:id="orders" strokeType="OUTSIDE" strokeWidth="0.0" text="Orders" wrappingWidth="104.7802734375">
               <font>
                  <Font size="30.0" />
               </font>
            </Text>
            <TableView fx:id="ordersTable" prefHeight="500.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="idColumn" prefWidth="102.39999771118164" text="Order ID" />
                <TableColumn fx:id="stockColumn" prefWidth="92.79998779296875" text="Stock" />
                  <TableColumn fx:id="quantityColumn" prefWidth="95.99998474121094" text="Quantity" />
                  <TableColumn fx:id="priceColumn" prefWidth="107.20001220703125" text="Price" />
                  <TableColumn fx:id="timeColumn" prefWidth="116.0" text="Time" />
                  <TableColumn fx:id="typeColumn" prefWidth="175.199951171875" text="Order type (buy/sell)" />
                  <TableColumn fx:id="classColumn" prefWidth="125.5999755859375" text="Order class" />
                  <TableColumn fx:id="statusColumn" prefWidth="143.20001220703125" text="Order status" />
              </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</VBox>
